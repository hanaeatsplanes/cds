{
  "name": "@hanaeatsplanes/cds-cli",
  "version": "0.0.1-test",
  "author": "Sahana Celestine",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hanaeatsplanes/cds.git"
  },
  "module": "src/main.ts",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "bin": {
    "cds-cli": "bin/cds-cli"
  },
  "bugs": {
    "url": "https://github.com/hanaeatsplanes/cds/issues"
  },
  "description": "This is the helper tool for https://cds.sahana.dev",
  "homepage": "https://github.com/hanaeatsplanes/cds#readme",
  "license": "WTFPL",
  "scripts": {
    "build": "bun build:compile && bun build:executable",
    "build:compile": "bun build . --target=bun --outdir=dist",
    "build:executable": "bun build . --compile --outfile bin/cds-cli",
    "lint": "bun check; bun format",
    "lint:fix": "bun check:fix; bun format:fix",
    "format": "biome format .",
    "format:fix": "biome format . --write",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "ci:biome": "biome check . --error-on-warnings"
  },
  "type": "module"
}
